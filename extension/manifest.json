{
  "manifest_version": 2,
  "name": "Thunderbird MCP Bridge",
  "version": "1.0.0",
  "description": "Bridge between Thunderbird and MCP server via HTTP polling",
  "applications": {
    "gecko": {
      "id": "thunderbird-mcp-bridge@example.com",
      "strict_min_version": "78.0"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "accountsRead",
    "messagesRead",
    "messagesWrite",
    "accountsFolders",
    "addressBooks",
    "contactsRead",
    "contactsWrite",
    "storage",
    "nativeMessaging"
  ]
}